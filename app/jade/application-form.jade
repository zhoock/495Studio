extends ../jade/layout.jade

block head
	- var title = 'Заявка на запись'
	- var description = '495 Studio Records - качественно записать вокал в студии звукозаписи, сделать минус или аранжировку авторской песни, сведение и мастеринг песен.'
	include ../includes/head

block content	

	// Application form
	.parallax-window.parallax-window--responsive(data-parallax="scroll", data-image-src="/images/prices.jpg")
		.b-container.b-container--flex.b-container--form
			.row
				.small-10.small-centered.medium-6.column
					.b-application-form
						h1 Заявка на запись

						form(action="https://formspree.io/495studio@mail.ru", method="POST").b-registration.js-validate-forms
							div
								label(for="name_1") Имя
								input#name_1(type="text", placeholder="Ваше имя", data-validate="Пожалуйста, введите ваше имя", name="Имя")

							div
								label(for="name_2") Фамилия
								input#name_2(type="text", placeholder="Ваша фамилия", data-validate="Пожалуйста, введите вашу фамилию", name="Фамилия")

							div
								label(for="email") E-mail
								input#email(type="text", placeholder="Электронная почта", data-validate="Пожалуйста, введите вашу электронную почту", name="Электронная почта")

							div
								label(for="phone") Номер телефона
								input#phone(type="text", placeholder="Ваш номер телефона", data-inputmask="'mask': '8 (999) 999-99-99'", data-validate="Пожалуйста, введите номер вашего телефона", name="Номер телефона")

							div.checkbox
								input#option1(type="checkbox", name="Тип услуги", value="Запись вокала", checked)
								label(for="option1") Запись вокала
								input#option2(type="checkbox", name="Тип услуги", value="Аранжировка",)
								label(for="option2") Аранжировка
								input#option3(type="checkbox", name="Тип услуги", value="Сведение",)
								label(for="option3") Сведение
								input#option4(type="checkbox", name="Тип услуги", value="Мастеринг",)
								label(for="option4") Мастеринг		

							div
								label(for="date") Дата
								input#date(type="text", placeholder="Ваша дата", data-inputmask="'alias': 'dd/mm/yyyy'", data-validate="Пожалуйста, введите дату", name="Дата записи")

							div
								label(for="time") Время
								input#time(type="text", placeholder="Ваше время", data-inputmask="'alias': 'hh:mm'", data-validate="Пожалуйста, введите время", name="Время записи")

							input(type="hidden", name="_next", value="/application-form-confirmed.html")
							input(type="hidden", name="_subject", value="Новая заявка!")
							input(type="hidden", name="_format", value="plain")

							a.btn.btn__start.js_btn_submit Отправить

	// Application form
		
	
